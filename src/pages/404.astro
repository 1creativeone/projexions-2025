---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Page Not Found â€” Projexions"
  description="The page you're looking for doesn't exist."
>
  <div class="page-container">
    <div class="error-page">
      <div class="error-code" aria-hidden="true">404</div>
      <h1 class="serif-heading section-title">Page Not Found</h1>
      <p class="text-lg mb-8 leading-relaxed">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <div class="error-links">
        <a href="/" class="cta-button">Go to Homepage</a>
        <a href="/contact" class="text-brand-green">Contact Us</a>
      </div>
      <div class="error-suggestions mt-8">
        <p class="mb-4">You might be looking for:</p>
        <ul class="resource-list">
          <li><a href="/services" class="text-brand-green">Services</a></li>
          <li><a href="/articles" class="text-brand-green">Articles</a></li>
          <li><a href="/store" class="text-brand-green">Store</a></li>
          <li><a href="/about" class="text-brand-green">About</a></li>
          <li><a href="/contact" class="text-brand-green">Contact</a></li>
        </ul>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .error-page {
    text-align: center;
    padding: 4rem 0;
  }
  
  .error-code {
    font-size: 6rem;
    font-weight: 600;
    color: var(--brand-green);
    margin-bottom: 1rem;
    line-height: 1;
  }
  
  .error-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }
  
  .error-suggestions {
    text-align: left;
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
  }
  
  @media (min-width: 768px) {
    .error-links {
      flex-direction: row;
      justify-content: center;
      gap: 2rem;
    }
  }
</style>

