---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="page-header">
  <h1 class="page-header-title">{title}</h1>
  {subtitle && <p class="page-header-subtitle">{subtitle}</p>}
</div>

<style>
  .page-header {
    margin-bottom: 3rem;
  }

  .page-header-title {
    font-family: 'Lora', Georgia, serif;
    font-size: 3rem;
    font-weight: 700;
    color: var(--text-charcoal);
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 3px solid var(--brand-green);
    line-height: 1.2;
    text-align: center;
  }

  .page-header-subtitle {
    font-size: 1.125rem;
    color: var(--text-charcoal);
    line-height: 1.6;
    margin-top: 1rem;
    opacity: 0.85;
    text-align: center;
  }

  @media (max-width: 768px) {
    .page-header {
      margin-bottom: 2rem;
    }

    .page-header-title {
      font-size: 2rem;
      padding-bottom: 0.75rem;
    }

    .page-header-subtitle {
      font-size: 1rem;
    }
  }
</style>
